<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicProfile">

    <ImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="142dp"
        android:layout_height="128dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/temp_settings_profile_image"
        tools:srcCompat="@drawable/temp_settings_profile_image" />

    <TextView
        android:id="@+id/public_profile_recipes"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="56dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/settings_recipes"
        app:layout_constraintTop_toBottomOf="@+id/public_profile_username" />

    <TextView
        android:id="@+id/settings_username"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Username:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/settings_profile_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_recipes"
        android:layout_width="82dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="Recipes:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/settings_profile_image"
        app:layout_constraintTop_toBottomOf="@+id/settings_username" />

    <TextView
        android:id="@+id/settings_allergens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="Allergens"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_filters" />

    <TextView
        android:id="@+id/settings_about_me"
        android:layout_width="88dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="About Me"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_profile_image" />

    <TextView
        android:id="@+id/settings_filters"
        android:layout_width="99dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="Filters"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/public_profile_about_me" />

    <TextView
        android:id="@+id/public_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="username"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/settings_username"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/public_profile_about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:lines="4"
        android:maxLines="4"
        android:text="about me"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_about_me" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/public_profile_allergens"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_allergens" />


</androidx.constraintlayout.widget.ConstraintLayout>