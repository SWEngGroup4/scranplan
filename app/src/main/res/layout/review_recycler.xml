                <!--                    <TextView-->
                <!--                        android:id="@+id/postRecipeDescription"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content" />-->

                <!--                </LinearLayout>-->

                <!--            </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:minWidth="5sp"
                        android:layout_weight="1" >
                    </Space>

                    <RatingBar
                        android:id="@+id/ratingBar2"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12sp"
                        android:numStars="5"
                        android:padding="5dp"
                        android:progressTint="@color/colorRatingGold"
                        android:scaleType="fitCenter"
                        android:secondaryProgressTint="@android:color/transparent" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:minWidth="5sp"
                        android:layout_weight="1" >
                    </Space>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/openCommentsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/postNumLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textStyle="bold"
                            android:text="0"
                            android:paddingHorizontal="5sp"/>



                        <CheckBox
                            android:id="@+id/likeIcon"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:maxWidth="40sp"
                            android:maxHeight="40sp"
                            android:scaleType="fitCenter"
                            android:button="@null"
                            android:checked="false"
                            android:background="@drawable/like"
                            android:stateListAnimator="@animator/select"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="end"
                        android:gravity="bottom|end"
                        android:paddingRight="5sp">

                        <TextView
                            android:id="@+id/postTimeStamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right|end"
                            android:paddingHorizontal="5sp"
                            android:singleLine="true"
                            android:text="Time Stamp"
                            android:textColor="#979797" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>