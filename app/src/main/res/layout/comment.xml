<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/commentListCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:radius="10sp"
        app:cardCornerRadius="10sp"
        app:cardBackgroundColor="#ACE98A"
        app:contentPadding="7sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commentMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message that will enable the user to input a large message in this section. theill will be limmited to about 50 words." />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>