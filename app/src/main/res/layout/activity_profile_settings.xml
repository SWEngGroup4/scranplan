<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/settings_input_username"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8sp"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:padding="5.5sp"
                android:singleLine="true"

                android:text="Input Field"
                android:textColor="#353236"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/public_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/profile_username"
                app:layout_constraintWidth_percent="0.35" />

            <Button
                android:id="@+id/settings_reset_password"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:background="@color/colorPrimaryText"
                android:onClick="changePassword"
                android:text="change password"
                android:textColor="#C8FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_save_settings"
                app:layout_constraintWidth_percent="0.4" />

            <Button
                android:id="@+id/settings_delete_profile"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="16sp"
                android:layout_marginBottom="20sp"
                android:background="@color/colorDangerRed"
                android:onClick="deleteProfile"
                android:text="delete profile"
                android:textColor="#C8FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_save_settings"
                app:layout_constraintVertical_bias="0.17000002"
                app:layout_constraintWidth_percent="0.4" />

            <ImageView
                android:id="@+id/public_profile_image"
                android:layout_width="119dp"
                android:layout_height="110dp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/temp_settings_profile_image"
                tools:srcCompat="@drawable/temp_settings_profile_image" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="97sp"
                android:layout_height="23sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="15sp"
                android:text="Username:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@+id/public_profile_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_recipes"
                android:layout_width="82sp"
                android:layout_height="29sp"
                android:layout_marginStart="8sp"
                android:layout_marginTop="56sp"
                android:text="Recipes:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toEndOf="@+id/public_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/profile_username" />

            <TextView
                android:id="@+id/profile_allegerns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="5sp"
                android:text="Allergens"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_filters" />

            <TextView
                android:id="@+id/settings_visibility"
                android:layout_width="180sp"
                android:layout_height="22sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="5sp"
                android:text="Profile Visibility:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_privacy" />

            <TextView
                android:id="@+id/settings_privacy"
                android:layout_width="99sp"
                android:layout_height="26sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="5sp"
                android:text="Privacy"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_checkbox_table" />

            <TableLayout
                android:id="@+id/settings_checkbox_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="16sp"
                android:background="#cecce0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_allegerns">

                <TableRow
                    android:layout_height="wrap_content"
                    android:padding="3sp">

                    <CheckBox
                        android:id="@+id/allergy_nuts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onCheckboxClicked"
                        android:text="Nuts"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/allergy_milk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onCheckboxClicked"
                        android:text="Milk"
                        android:textSize="13sp" />


                </TableRow>

                <TableRow android:padding="3sp">

                    <CheckBox
                        android:id="@+id/allergy_shellfish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onCheckboxClicked"
                        android:text="Shellfish"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/allergy_soy"
                        android:layout_width="120sp"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:onClick="onCheckboxClicked"
                        android:text="Soy"
                        android:textSize="13sp" />


                </TableRow>

                <TableRow android:padding="3sp">

                    <CheckBox
                        android:id="@+id/allergy_wheat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onCheckboxClicked"
                        android:text="Wheat"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/allergy_eggs"
                        android:layout_width="113sp"
                        android:layout_height="38sp"
                        android:layout_weight="1"
                        android:onClick="onCheckboxClicked"
                        android:text="Eggs"
                        android:textSize="13sp" />

                </TableRow>


            </TableLayout>

            <TextView
                android:id="@+id/profile_about_me"
                android:layout_width="88sp"
                android:layout_height="21sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="5sp"
                android:text="About Me"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/public_profile_image" />

            <TextView
                android:id="@+id/profile_filters"
                android:layout_width="99sp"
                android:layout_height="26sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="8sp"
                android:text="Filters"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_input_about_me" />

            <Button
                android:id="@+id/settings_save_settings"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="16dp"
                android:onClick="saveSettings"
                android:text="save settings"
                android:textColor="#C8FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_privacy_table" />

            <EditText
                android:id="@+id/settings_input_about_me"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="71sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="16sp"
                android:background="@drawable/rounded_corners"
                android:ems="10"
                android:padding="5.5sp"
                android:text="Input Field"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#353236"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_about_me" />

            <TableLayout
                android:id="@+id/settings_privacy_table"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:layout_marginStart="16sp"
                android:layout_marginTop="4sp"
                android:layout_marginEnd="16sp"
                android:showDividers="middle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_visibility">

                <TableRow android:padding="1sp">

                    <Switch
                        android:id="@+id/settings_privacy_username"
                        android:layout_width="match_parent"
                        android:layout_margin="4sp"
                        android:layout_weight="1"
                        android:background="#36675B7A"
                        android:checked="false"
                        android:onClick="onSwitchClicked"
                        android:padding="6sp"
                        android:text="Username"
                        android:textSize="13sp"
                        tools:checked="true" />

                    <Switch
                        android:id="@+id/settings_privacy_about_me"
                        android:layout_width="match_parent"
                        android:layout_margin="4sp"
                        android:layout_weight="1"
                        android:background="#36675B7A"
                        android:checked="false"
                        android:onClick="onSwitchClicked"
                        android:padding="6sp"
                        android:text="About Me"
                        android:textSize="13sp"
                        tools:checked="true" />


                </TableRow>

                <TableRow>

                    <Switch
                        android:id="@+id/settings_privacy_recipes"
                        android:layout_margin="4sp"
                        android:layout_weight="1"
                        android:background="#36675B7A"
                        android:checked="false"
                        android:onClick="onSwitchClicked"
                        android:padding="6sp"
                        android:text="Recipes"
                        android:textSize="13sp"
                        tools:checked="true" />

                    <Switch
                        android:id="@+id/settings_privacy_profile_image"
                        android:layout_margin="4sp"
                        android:layout_weight="1"
                        android:background="#36675B7A"
                        android:checked="false"
                        android:onClick="onSwitchClicked"
                        android:padding="6sp"
                        android:text="Profile Image"
                        android:textSize="13sp"
                        tools:checked="false" />


                </TableRow>

                <TableRow>

                    <Switch
                        android:id="@+id/settings_privacy_filters"
                        android:layout_margin="4sp"
                        android:layout_weight="1"
                        android:background="#36675B7A"
                        android:checked="false"
                        android:onClick="onSwitchClicked"
                        android:padding="6sp"
                        android:text="Filters"
                        android:textSize="13sp"
                        tools:checked="true" />
                </TableRow>

                <TableRow></TableRow>

            </TableLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>